<UserControl x:Class="PDS800_WirelessTransmitter_Calibration.CalibrationBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             xmlns:local="clr-namespace:PDS800_WirelessTransmitter_Calibration"
             mc:Ignorable="d" 
             
             MinHeight="540" MinWidth="780" 
             Background="White">

    <!--自定义命令--><!--
    <UserControl.Resources>
        <RoutedUICommand x:Key="sendTextKey"/>
    </UserControl.Resources>

    --><!--自定义命令绑定--><!--
    <UserControl.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="Enter" Command="{StaticResource sendTextKey}"/>
    </UserControl.InputBindings>

    --><!--设置命令--><!--
    <UserControl.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="FileOpen"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="FileSave"/>
        <CommandBinding Command="ApplicationCommands.Close" Executed="WindowClosed"/>
        <CommandBinding Command="{StaticResource sendTextKey}" Executed="SendButton_Click"/>
    </UserControl.CommandBindings>-->

    <!--定义窗格网络-->
    <Grid>
        <Grid.RowDefinitions>
            <!--半固定面板-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="540*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="120*" MinHeight="120"/>
                <RowDefinition Height="60*" MinHeight="60"/>
                <RowDefinition Height="90*" MinHeight="90"/>
            </Grid.RowDefinitions>

            <!--串口配置面板-->
            <GroupBox BorderBrush="Gray" Grid.Row="0" BorderThickness="1" Margin="5" Header="配置面板" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Margin="5,0" Content="端    口" VerticalAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="0" Margin="5,0" Content="波特率" VerticalAlignment="Center"/>
                    <Label Grid.Row="2" Grid.Column="0" Margin="5,0" Content="校验位" VerticalAlignment="Center"/>
                    <Label Grid.Row="3" Grid.Column="0" Margin="5,0" Content="数据位" VerticalAlignment="Center"/>
                    <Label Grid.Row="4" Grid.Column="0" Margin="5,0" Content="停止位" VerticalAlignment="Center"/>
                    <DockPanel  Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5,0">
                        <Label Content="串口状态"/>
                        <Ellipse HorizontalAlignment="Center" Height="16" Stroke="White" Width="16" Name="serialPortStatusEllipse" Fill="Gray"/>
                    </DockPanel>

                    <ComboBox Height="24" x:Name="portNameComboBox" Grid.Row="0" Grid.Column="1" Margin="5" SelectedIndex="0"/>
                    <ComboBox Height="24" x:Name="baudRateComboBox" Grid.Row="1" Grid.Column="1" Margin="5" SelectedIndex="11">
                        <!--自定义串口波特率-->
                        <ComboBoxItem Content="300"/>
                        <ComboBoxItem Content="600"/>
                        <ComboBoxItem Content="1200"/>
                        <ComboBoxItem Content="2400"/>
                        <ComboBoxItem Content="4800"/>
                        <ComboBoxItem Content="9600"/>
                        <ComboBoxItem Content="19200"/>
                        <ComboBoxItem Content="38400"/>
                        <ComboBoxItem Content="43000"/>
                        <ComboBoxItem Content="56000"/>
                        <ComboBoxItem Content="57600"/>
                        <ComboBoxItem Content="115200"/>
                        <ComboBoxItem Content="128000"/>
                        <ComboBoxItem Content="230400"/>
                        <ComboBoxItem Content="256000"/>
                        <ComboBoxItem Content="460800"/>
                        <ComboBoxItem Content="921600"/>
                    </ComboBox>
                    <ComboBox Height="24" Grid.Row="2" Grid.Column="1" Margin="5" x:Name="parityComboBox" SelectedIndex="0">
                        <ComboBoxItem Content="None"/>
                        <ComboBoxItem Content="Odd"/>
                        <ComboBoxItem Content="Even"/>
                        <ComboBoxItem Content="Mark"/>
                        <ComboBoxItem Content="Space"/>
                    </ComboBox>
                    <ComboBox Height="24" Grid.Row="3" Grid.Column="1" x:Name="dataBitsComboBox" SelectedIndex="3" Margin="5">
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="7"/>
                        <ComboBoxItem Content="8"/>
                    </ComboBox>
                    <ComboBox Height="24" Grid.Row="4" Grid.Column="1" x:Name="stopBitsComboBox" SelectedIndex="0" Margin="5">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="1.5"/>
                        <ComboBoxItem Content="3"/>
                    </ComboBox>
                    <ToggleButton  Height="24" x:Name="turnOnButton" Grid.Row="5" Grid.Column="1" Margin="5" Content="打开串口" Checked="TurnOnButton_Checked" Unchecked="TurnOnButton_Unchecked" />


                </Grid>
            </GroupBox>
            <!--串口接收面板-->
            <GroupBox Header="接收面板" Margin="5" BorderBrush="Gray" Grid.Row="1" BorderThickness="1">
                <Grid VerticalAlignment="Center" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <CheckBox x:Name="autoClearCheckBox" Margin="5,5,10,5" Content="自动清空" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" IsChecked="True"/>
                        <Button Command="Save" Content="保存文件" Margin="5,5,10,5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    </StackPanel>
                    <Button x:Name="clearReceiveButton"  Grid.Column="1" Margin="5" Content="清空接收区" Click="ClearReceiveButton_Click"/>

                    <!--<CheckBox x:Name="hexadecimalDisplayCheckBox" Unchecked="HexadecimalDisplayCheckBox_Unchecked" Checked="HexadecimalDisplayCheckBox_Checked" Grid.Row="2" Grid.Column="0" Margin="5" Content="十六进制显示" VerticalContentAlignment="Center"/>-->
                    <!--<ToggleButton x:Name="stopShowingButton" Grid.Row="0" Grid.Column="1" Margin="5" Content="停止显示" Checked="StopShowingButton_Checked" Unchecked="StopShowingButton_Unchecked"/>-->
                </Grid>
            </GroupBox>
            <!--串口发送面板-->
            <GroupBox BorderBrush="Gray"  BorderThickness="1" Grid.Row="2" Margin="5" Header="发送面板" Visibility="Hidden">
                <Grid  VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" Grid.Row="0" Margin="5" VerticalAlignment="Center" Grid.ColumnSpan="2" >
                        <Label VerticalAlignment="Center" Content="自动发送周期"/>
                        <TextBox x:Name="autoSendCycleTextBox" Margin="0" Text="1000" MinWidth="66" VerticalAlignment="Center"/>
                        <Label Content="毫秒" Margin="0" VerticalAlignment="Center"/>
                    </DockPanel>

                    <Border  Grid.Column="0" Grid.Row="1" Margin="5" VerticalAlignment="Center">
                        <StackPanel>
                            <CheckBox x:Name="autoSendCheckBox" Margin="5" VerticalAlignment="Center" Content="自动发送" Checked="AutoSendCheckBox_Checked" Unchecked="AutoSendCheckBox_Unchecked"/>
                            <Button x:Name="clearSendButton" Margin="5" Content="清空重填" Click="ClearSendButton_Click"/>
                            <Button Command="Open" Margin="5" Content="加载文件" Click="ClearReceiveButton_Click"/>
                        </StackPanel>
                    </Border>


                    <Button x:Name="sendButton" Grid.Row="1" Grid.Column="2" Margin="5" Content="手动发送" Click="SendButton_Click">
                        <Button.ToolTip>
                            <ToolTip Placement="Right" Content="Ctrl+Enter"/>
                        </Button.ToolTip>
                    </Button>

                    <DockPanel Grid.Column="0" Grid.Row="2" Margin="0" Grid.ColumnSpan="2">
                        <Label Content="文件路径" Margin="5" VerticalAlignment="Center"/>
                        <TextBox x:Name="fileNameTextBox" IsReadOnly="True" Margin="0" Text="选择文件" HorizontalContentAlignment="Center" Width="150" VerticalAlignment="Center"/>
                    </DockPanel>
                </Grid>
            </GroupBox>
            <!--设备参数标定面板-->
            <GroupBox Grid.Row="2" Header="参数标定面板" Margin="5" BorderBrush="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5" Grid.Row="0">
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="常规数据更新率" Width="120"/>
                        <TextBox x:Name="regularDataUpdateRate" Margin="0" Text="8" Width="30" VerticalAlignment="Center" PreviewTextInput="RegularDataUpdateRate_PreviewTextInput"/>
                        <TextBlock VerticalAlignment="Center" Text="秒"></TextBlock>
                    </DockPanel>
                    <DockPanel Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5" Grid.Row="1">
                        <Label Content="连接状态"/>
                        <Ellipse HorizontalAlignment="Center" Height="16" Stroke="White" Width="16" Name="connectionStatusEllipse" Fill="Gray"/>
                        <ToggleButton x:Name="establishConnectionButton" Margin="5" Content="建立连接" Checked="EstablishConnectionButton_Checked" Unchecked="EstablishConnectionButton_Unchecked"/>
                    </DockPanel>
                    <Button Grid.Column="0" Grid.Row="2" x:Name="descriptionCalibrationButton" Margin="5" Content="描述标定" Click="DescriptionCalibrationButton_Click"/>
                    <Button Grid.Column="1" Grid.Row="2" x:Name="parameterCalibrationButton" Margin="5" Content="参数标定" Click="ParameterCalibrationButton_Click"/>
                    <Button x:Name="manuallySendButton" Grid.Row="3" Grid.Column="1" Margin="5" Content="手动发送" Click="SendButton_Click">
                        <Button.ToolTip>
                            <ToolTip Placement="Right" Content="Ctrl+Enter"/>
                        </Button.ToolTip>
                    </Button>
                    <Button x:Name="manuallyClearSendButton" Grid.Row="3" Grid.Column="0" Margin="5" Content="清空重填" Click="ClearSendButton_Click"/>


                </Grid>


            </GroupBox>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="90*" MinHeight="90"/>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="150*" MinHeight="150"/>
                <RowDefinition Height="60*" MinHeight="60"/>
            </Grid.RowDefinitions>
            <!--显示面板-->
            <GroupBox Grid.Row="0" Header="显示文本面板" Margin="5" BorderBrush="Gray">
                <ScrollViewer x:Name="displayScrollViewer" Margin="5">
                    <TextBox x:Name="displayTextBox" IsReadOnly="True" TextWrapping="Wrap" TextAlignment="Left"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="宋体" FontSize="15" BorderBrush="{x:Null}" BorderThickness="0"/>
                    <ScrollViewer.ToolTip>
                        <ToolTip Placement="Top" Content="显示串口接收到的数据"/>
                    </ScrollViewer.ToolTip>
                </ScrollViewer>
            </GroupBox>
            <!--仪表参数解析面板-->
            <GroupBox Grid.Row="1" Header="仪表参数解析面板" Margin="5" BorderBrush="Gray">
                <WrapPanel VerticalAlignment="Center" x:Name="instrumentParameterAnalysisWrapPanel">
                    <DockPanel x:Name="resProtocolDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="通信协议" VerticalAlignment="Center" Width="80" />
                        <TextBox x:Name="resProtocol" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resAddressDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="网络地址" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resAddress" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resVendorDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="厂商号" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resVendor" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resTypeDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="仪表类型" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resType" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resGroupDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="仪表组号" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resGroup" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resFunctionDataDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="数据类型" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resFunctionData" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resSucRateDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="通信效率" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resSucRate" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resBatVolDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="电池电压" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resBatVol" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resSleepTimeDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="休眠时间" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resSleepTime" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resStatueDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="仪表状态" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resStatue" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resTimeDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="运行时间" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resTime" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resDataDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="实时数据" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resData" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                    <DockPanel x:Name="resCRCDockPanel" Margin="5,0" Visibility="Collapsed">
                        <Label Content="CRC校验" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="resCRC" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalAlignment="Center" MinWidth="80"/>
                    </DockPanel>
                </WrapPanel>
            </GroupBox>
            <!--标定信息设置面板-->

            <!--设备描述标定信息-->
            <TabControl Grid.Row="2" Margin="5" BorderBrush="Gray" >
                <TabItem Header="描述标定" >
                    <ScrollViewer>
                        <WrapPanel VerticalAlignment="Center">
                            <DockPanel Margin="5,0">
                                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="仪表型号（8byte）" Width="120"/>
                                <TextBox x:Name="calibrationInstrumentModelTextBox" Margin="0" Text="00 01 02 03 04 05 06 07" MinWidth="120" VerticalAlignment="Center" PreviewTextInput="CalibrationInstrumentModelTextBox_PreviewTextInput"/>
                            </DockPanel>
                            <DockPanel Margin="5,0">
                                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="系列号（16byte）" Width="120"/>
                                <TextBox x:Name="calibrationSerialNumberTextBox" PreviewTextInput="CalibrationSerialNumberTextBox_PreviewTextInput" Margin="0" Text="00 01 02 03 04 05 06 07 08 09 0A 0B 0C 0D 0E 0F" MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                            <DockPanel Margin="5,0">
                                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="IP等级（8byte）" Width="120"/>
                                <TextBox x:Name="calibrationIPRatingTextBox" PreviewTextInput="CalibrationIPRatingTextBox_PreviewTextInput" Margin="0" Text="00 01 02 03 04 05 06 07" MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                            <DockPanel Margin="5,0">
                                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="防爆等级（12byte）" Width="120"/>
                                <TextBox x:Name="calibrationExplosionProofLevelTextBox" PreviewTextInput="CalibrationExplosionProofLevelTextBox_PreviewTextInput" Margin="0" Text="00 01 02 03 04 05 06 07 08 09 0A 0B" MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                            <DockPanel Margin="5,0">
                                <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="说明（10byte）" Width="120"/>
                                <TextBox x:Name="calibrationInstructionsTextBox" PreviewTextInput="CalibrationInstructionsTextBox_PreviewTextInput" Margin="0" Text="00 01 02 03 04 05 06 07 08 09" MinWidth="120" VerticalAlignment="Center"/>
                            </DockPanel>
                        </WrapPanel>
                        <ScrollViewer.ToolTip>
                            <ToolTip Placement="Top" Content="需要标定的内容"/>
                        </ScrollViewer.ToolTip>
                    </ScrollViewer>
                </TabItem>
                <!--设备参数标定信息-->
                <TabItem Header="参数标定">
                    <WrapPanel VerticalAlignment="Center">
                        <DockPanel Margin="5,0">
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="标定参数" Width="120"/>
                            <ComboBox Height="24" Margin="0,5" x:Name="calibrationParametersComboBox" SelectedIndex="0" MinWidth="240" SelectionChanged="CalibrationParametersComboBox_SelectionChanged">
                                <ComboBoxItem Content="0x50，下限标定"/>
                                <ComboBoxItem Content="0x51，上限标定（加压）"/>
                                <ComboBoxItem Content="0x52，置零点（SetZero）"/>
                                <ComboBoxItem Content="0x53，设量程上限"/>
                                <ComboBoxItem Content="0x54，设量程下限"/>
                                <ComboBoxItem Content="0x55，显示单位"/>
                            </ComboBox>
                        </DockPanel>

                        <DockPanel Margin="5,0">
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="命令号（1byte）" Width="120"/>
                            <TextBox x:Name="calibrationCommandNumberTextBox" Margin="0" Text="00" MinWidth="120" VerticalAlignment="Center"/>
                        </DockPanel>
                        <DockPanel Margin="5,0">
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="单位（1byte）" Width="120"/>
                            <TextBox x:Name="calibrationUnitTextBox" Margin="0" Text="00" MinWidth="120" VerticalAlignment="Center"/>
                        </DockPanel>
                    </WrapPanel>
                </TabItem>
                <TabItem Header="实时数据">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="dataUsageText" Margin="10,10,0,0"
                       FontSize="15"/>
                        </StackPanel>
                        <d3:ChartPlotter x:Name="plotter" Margin="10,10,20,10" Grid.Row="1">
                            <d3:ChartPlotter.VerticalAxis>
                                <d3:VerticalIntegerAxis />
                            </d3:ChartPlotter.VerticalAxis>

                            <d3:ChartPlotter.HorizontalAxis>
                                <d3:HorizontalIntegerAxis />
                            </d3:ChartPlotter.HorizontalAxis>

                        </d3:ChartPlotter>
                    </Grid>
                </TabItem>
            </TabControl>
            <!--发送文本面板-->
            <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="发送文本面板" Margin="5" BorderBrush="Gray">
                <ScrollViewer Margin="5" BorderBrush="Gray">
                    <TextBox x:Name="sendTextBox" AcceptsReturn="True" TextWrapping="Wrap" TextAlignment="Left"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="宋体" FontSize="15" PreviewTextInput="SendTextBox_PreviewTextInput" BorderBrush="{x:Null}" BorderThickness="0"/>
                    <ScrollViewer.ToolTip>
                        <ToolTip Placement="Top" Content="将要发送的数据，Ctrl+Enter发送"/>
                    </ScrollViewer.ToolTip>
                </ScrollViewer>
            </GroupBox>








        </Grid>


        <!--状态栏-->
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Padding="0" VerticalAlignment="Bottom" Height="31">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="200*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0" VerticalAlignment="Stretch" Margin="5,0,5,0">
                <!--提示栏-->
                <TextBlock x:Name="statusTextBlock" Foreground="Red"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" Grid.Column="1" >
                <!--接收字节数-->
                <Label Content="接收字节数"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="2" VerticalAlignment="Center" >
                <TextBlock Name="statusReceiveByteTextBlock" Foreground="Blue" Text="0"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="3" HorizontalAlignment="Right">
                <!--发送字节数-->
                <Label Content="发送字节数"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="4" VerticalAlignment="Center" >
                <TextBlock Name="statusSendByteTextBlock" Foreground="Blue" Text="0"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0">
                <!--计数清零-->
                <Button Width="80" Name="countClearButton" Click="CountClearButton_Click" Content="计数清零"/>
            </StatusBarItem>
            <StatusBarItem Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0">
                <!--当前时间-->
                <TextBlock Name="operationTime" Foreground="Blue" Text="0"/>
            </StatusBarItem>
        </StatusBar>

    </Grid >
</UserControl>
